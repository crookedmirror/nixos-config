{
  "$schema": "https://raw.githubusercontent.com/code-yeongyu/oh-my-opencode/v3.0.0-beta.7/assets/oh-my-opencode.schema.json",
  "google_auth": false,
  "disabled_hooks": ["auto-update-checker"],
  "claude_code": {
    "mcp": true,
    "commands": true,
    "skills": true,
    "agents": true
  },
  "agents": {
    "Sisyphus": {
      "model": "anthropic/claude-opus-4-5",
      "temperature": 0.3
    },
    "orchestrator-sisyphus": {
      "model": "anthropic/claude-opus-4-5"
    },
    "Sisyphus-Junior": {
      "model": "anthropic/claude-sonnet-4-5"
    },
    "Prometheus (Planner)": {
      "model": "openai/gpt-5.2"
    },
    "Momus (Plan Reviewer)": {
      "model": "openai/gpt-5.2"
    },
    "multimodal-looker": {
      "model": "google/gemini-3-flash-preview"
    },
    "OpenCode-Builder": {
      "model": "anthropic/claude-opus-4-5"
    },
    "Metis (Plan Consultant)": {
      "model": "openai/gpt-5.2"
    },
    "oracle": {
      "model": "openai/gpt-5.2"
    },
    "librarian": {
      "model": "anthropic/claude-haiku-4-5"
    },
    "explore": {
      "model": "anthropic/claude-haiku-4-5"
    },
    "frontend-ui-ux-engineer": {
      "model": "google/gemini-3-pro-preview"
    },
    "document-writer": {
      "model": "anthropic/claude-sonnet-4-5"
    }
  },
  "experimental": {
    "auto_resume": true
  }
}
